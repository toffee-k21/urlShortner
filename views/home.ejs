<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>Server Side Rendering</title>
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background-color: #f8f8f8;
        padding: 2rem;
      }

      .container {
        text-align: center;
      }

      form {
        margin-bottom: 2rem;
      }

      .input-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 1rem 0;
      }

      .input-prefix {
        font-size: 18px;
        background-color: #fff;
        padding: 12px;
        border: 4px solid #000;
        border-right: none;
        height: 60px;
        box-shadow: 8px 8px 0 #000;
      }

      input.input {
        width: 270px;
        height: 60px;
        padding: 12px;
        font-size: 18px;
        font-family: "Courier New", monospace;
        color: #000;
        background-color: #fff;
        border: 4px solid #000;
        border-left: none;
        box-shadow: 8px 8px 0 #000;
        outline: none;
      }

      button {
        margin-top: 1rem;
        padding: 12px 24px;
        font-size: 18px;
        border: none;
        background-color: #000;
        color: #fff;
        cursor: pointer;
      }

      ol {
        text-align: left;
        max-width: 600px;
        margin: 2rem auto;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Trim Your URL Here</h1>
      <form action="/url" method="POST">
        <div class="input-container">
          <div class="input-prefix">http://</div>
          <input
            class="input"
            name="redirectUrl"
            type="text"
            placeholder="Enter URL..."
            required
          />
        </div>
        <button type="submit">Trim</button>
      </form>

      <% if (data && data.length > 0) { %>
      <ol>
        <% data.forEach(url => { %>
        <li>
          <a href="/<%= url.shortID %>" target="_blank">
            <%= url.shortID %>
          </a>
          â€“ <%= url.redirectUrl %>
        </li>
        <% }) %>
      </ol>
      <% } else { %>
      <p>No URLs found.</p>
      <% } %>
    </div>
  </body>
</html>
